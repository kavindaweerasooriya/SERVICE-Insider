 <!-- provider list Section -->
<section class="page-section" id="services">
    <div class="container">
        <h2 class="text-center mt-0">At Your Service</h2>
        <hr class="divider my-4">
        <a href="/providers/add-provider/" class="btn btn-primary my-2">Add New Provider</a>

        <div class="table-responsive">

            <table class="table table-hover table-boardered">
                <thead class="thead-light">
                    <tr>
                        <th scope="col ">Id</th>
                        <th scope="col ">Name</th>
                        <th scope="col ">Position</th>
                        <th scope="col ">Company</th>
                        <th scope="col  ">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each providers}}
                    <tr>
                        <td scope="row ">{{id}}</td>
                        <td scope="row ">{{name}}</td>
                        <td scope="row ">{{position}}</td>
                        <td scope="row ">{{company.company_name}}</td>
                        <td scope="row">
                            <a href="/providers/details/{{id}}" class="btn btn-info btn-sm mx-1">More Info</a>

                            <a href="/providers/edit/{{id}}" class="btn btn-secondary btn-sm mx-1">Edit</a>

                            <a href="#myModal{{id}}" class="btn btn-danger btn-sm mx-1" data-toggle="modal">Delete</a>
                        </td>
                    </tr>

    
                    
                    <div id="myModal{{id}}" class="modal fade">
                        <div class="modal-dialog modal-confirm">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <div class="icon-box">
                                        <i class="material-icons">&#xE5CD;</i>
                                    </div>
                                    <h4 class="modal-title">Are you sure?</h4>
                                    <button type="button" class="close" data-dismiss="modal"
                                        aria-hidden="true">&times;</button>
                                </div>
                                <div class="modal-body">
                                    <p>Do you really want to delete these records? This process cannot be undone.</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-info btn-md"
                                        data-dismiss="modal">Cancel</button>
                                    <a href="/providers/delete/{{id}}" type="button" class="btn btn-danger btn-md">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>



                    {{/each }}
                </tbody>
            </table>

        </div>

    </div>
</section> 

